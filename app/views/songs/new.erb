<h1>New Song</h1>

<form action="/songs/new" method="POST">

  <label for="Name">Name:</label>
  <input id="Name" type="text" name="song[name]"></input>

  <p><strong>Select the new song genre:</strong></p>
  <% @genres.each do |g| %>
    <input id="<%= g.name %>" type="checkbox" name="genres[]" value="<%= g.id %>">
      <%= g.name %>
    </input>
  <% end %>

  <h2><strong>Find</strong> or <strong>Create</strong> a new artist:</h2>
  <label for="Artist Name">Artist Name:</label>
  <input id="Artist Name" type="text" name="song[artist]"></input>

  <input type="submit" value="Create" />

</form>
