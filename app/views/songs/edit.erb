<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <!--<input type="hidden" name="_method" value="PATCH">-->

  <label for="song_name">Song Name:</label>
  <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>">

  <label for="artist_name">Artist Name:</label>
  <input id="artist_name" type="text" name="song[artist]" value="<%= @song.artist.name %>"></input>

  <h2>Update the genre:</h2>
  <label>Genres:</label>
  <% @genres.each do |g| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%= g.id %>" id="<%= g.name %> <%= 'checked' if @song.genres.include?(g) %>"><%= g.name %></input>
  <% end %>

  <input type="submit" value="Save" />

</form>
