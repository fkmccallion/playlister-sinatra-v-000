<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <!--<input type="hidden" name="_method" value="PATCH">-->

  <label for="name">Name</label>
  <input type="text" name="song[name]" id="name" value="<%= @song.name %>">

  <label for="Artist Name">Artist Name:</label>
  <input id="Artist Name" type="text" name="song[artist]" value="<%= @song.artist.name %>"></input>

  <h2>Update the genre:</h2>
  <label>Genres:</label>
  <% @genres.each do |g| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%= g.id %>" id="<%= g.name %>"><%= g.name %></input>
  <% end %>

  <input type="submit" value="Save" />

</form>
